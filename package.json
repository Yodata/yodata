{
	"name": "yodata",
	"private": true,
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"commitizen": "^3.0.5",
		"cz-conventional-changelog": "^2.1.0",
		"lerna": "^3.13.2"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"scripts": {
		"commit": "npx git-cz"
	},
	"workspaces": [
		"packages/*"
	],
	"xo": {
		"envs": [
			"node",
			"jest/globals"
		],
		"plugins": "jest",
		"semicolon": false
	}
}
