{
	"name": "@yodata/transform",
	"version": "0.2.8",
	"description": "declarative, JSON transformation library",
	"main": "lib/index.js",
	"access": "public",
	"engines": {
		"node": ">=8.10"
	},
	"scripts": {
		"clean": "rm -rf lib/*",
		"commit": "npx git-cz",
		"build": "npm run clean & babel src/ -d lib/",
		"prepare": "npm run build",
		"test": "xo && jest --env node"
	},
	"author": "yodaveduran <dave@yodata.io> (https://yodata.io/)",
	"license": "MIT",
	"dependencies": {
		"acorn": "^6.0.5",
		"debug": "^4.1.1",
		"fs-extra": "^7.0.1",
		"immutable": "^4.0.0-rc.12",
		"js-yaml": "^3.12.1",
		"kind-of": "^6.0.2",
		"lodash": "^4.17.11",
		"sort-object-keys": "^1.1.2"
	},
	"directories": {
		"example": "examples",
		"lib": "lib",
		"test": "__tests__"
	},
	"devDependencies": {
		"@babel/cli": "^7.1.2",
		"@babel/core": "^7.2.2",
		"@babel/plugin-proposal-class-properties": "^7.1.0",
		"@babel/plugin-proposal-object-rest-spread": "^7.2.0",
		"@babel/preset-env": "^7.2.3",
		"@babel/preset-flow": "^7.0.0",
		"babel-core": "^7.0.0-bridge.0",
		"babel-eslint": "^10.0.1",
		"babel-jest": "^23.6.0",
		"eslint-plugin-jest": "^22.1.3",
		"jest": "^23.6.0",
		"regenerator-runtime": "^0.13.1",
		"xo": "^0.23.0"
	},
	"keywords": [
		"json",
		"schema",
		"transform",
		"jsonschema",
		"json-ld"
	],
	"xo": {
		"plugin": [
			"jest"
		],
		"semicolon": false,
		"envs": [
			"node"
		],
		"ignores": [
			"coverage",
			"out",
			"lib"
		]
	}
}
